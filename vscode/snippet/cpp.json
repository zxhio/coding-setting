	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Print to conaole": {
		"prefix": "comment",
		"body": [
			"//===----------------------------------------------------------------------===//",
			"// $1",
			"//===----------------------------------------------------------------------===//",
		],
		"description": "A cpp file comment."
	},

	"cpp file header": {
		"prefix": "cpp-header",
		"body": [
			"//===- $TM_FILENAME - $1 ----------------------------------------*- C++ -*-===//",
			"//",
			"/// \\file",
			"/// $2",
			"//",
			"// Author:  zxh",
			"// Date:    $CURRENT_YEAR/$CURRENT_MONTH/$CURRENT_DATE $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND",
			"//===----------------------------------------------------------------------===//"
		],
		"description": "A cpp file comment."
	}
}